//- 

extends ../layouts/default

block intro
	.container
		h1 Online Booking

block content
	body(data-spy="scroll" data-target=".navbar" data-offset="150")
		nav.navbar.navbar-inverse.navbar-fixed-top
			.navbar-header
				button.navbar-toggle(data-toggle="collapse" data-target="#myNavbar")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				.brand: img(src="../images/lash&brow.png")
			.collapse.navbar-collapse#myNavbar
				ul.nav.navbar-nav(style="margin-top:30px;")
					li: a(href="/" active) Home
					//- li: a(href="/#team") team
					//- li: a(href="/#photo") photos
					//- li: a(href="/#contact") contact
					//- li: a(href="/book") book online
	.container
		.center-500.y-masters-list.y-masters-lis_mt
			each user, index in data.users
				.y-content-block.y-block-shadow.mb
					.y-master-card_item_disabled.row
						.y-master-card_row
							.y-master-card_cell.y-master-card_logo
								.y-master-info-avatar
									a(href="/book/" + user._id)
										img(src=user.images[0].limit(300,300))
							.y-master-card_cell_middle.y-master-card_master-namespec
								h3=user.name.first +" "+ user.name.last
								h4=user.service_titles
						.y-master-card_row_additional_info.y-master-card_row
							.y-master-card_cell
								.y-master-card_rating.star-container
									span.fa.fa-star.star-gold
									span.fa.fa-star.star-gold
									span.fa.fa-star.star-gold
									span.fa.fa-star.star-gold
									span.fa.fa-star.star-gold
							.y-master-card_cell.y-master-card_cell_relative
								.y-reviews-button
									a.ng-binding 76 reviews
					if (user.schedule)
						.y-maser-card_footer
							.y-master-card_session
								h4="upcoming appointment " + user.schedule.date
							.master-time-slot-wrapper
								a.warn-color-dark.master-time-slot=user.schedule.time