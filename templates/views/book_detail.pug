//- 

extends ../layouts/default

block intro
  .container
    h1 Online Booking

block content
  body(data-spy="scroll" data-target=".navbar" data-offset="150")
    nav.navbar.navbar-inverse.navbar-fixed-top
      .navbar-header
        button.navbar-toggle(data-toggle="collapse" data-target="#myNavbar")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .brand: img(src="../images/lash&brow.png")
      .collapse.navbar-collapse#myNavbar
        ul.nav.navbar-nav(style="margin-top:30px;")
          li: a(href="/" active) Home
          //- li: a(href="/#team") team
          //- li: a(href="/#photo") photos
          //- li: a(href="/#contact") contact
          //- li: a(href="/book") book online
  .container
    .center-500.book-detail
      if data.user
        h1 Booking
        form(action='/book', method='POST')
          div.form-group
            h3="Employee Info"
            input(type='hidden' id='user_id' value=data.user._id)
          div.form-group
            div.col-sm-12.employee-photo
              if (data.photo)
                img(src=data.photo)
          div.form-group
            label.control-label.col-sm-4 Name:
            div.col-sm-8
              label=data.user.name.first + ' ' + data.user.name.last
          div.form-group
            label.control-label.col-sm-4(for='service') Service: 
            div.col-sm-8
              select#service.form-control
          div.form-group
            label.control-label.col-sm-4(for='date') Time:
            div.col-sm-4
              select#date.form-control.date
            div.col-sm-4
              select.form-control.time
          div.form-group
            h3="Customer Info"
          div.form-group
            label.control-label.col-sm-4(for='name') Name:
            div.col-sm-8
              input.form-control(id='name' type='text' placeholder='Enter your name')
          div.form-group
            label.control-label.col-sm-4(for='name') Phone Number:
            div.col-sm-8
              input.form-control(id='number' type='tel' placeholder='Enter your phone number')
          div.form-group
            label.control-label.col-sm-4(for='email') Email:
            div.col-sm-8
              input.form-control(id='email' type='email' placeholder='Enter your email')
          div.form-group
            label.control-label.col-sm-4(for='description') Description:
            div.col-sm-8
              textarea.form-control(id='description' rows='4' placeholder='Enter name')
          div.form-group
            label.control-label.col-sm-4(for='reminder') Reminder:
            div.col-sm-8
              select.form-control(id='reminder')
                option(value='Yes') Yes
                option(value='No') No
          div.form-group
            div.col-sm-offset-4.col-sm-8
              div.checkbox
                label
                  input(type='checkbox' name='agree' value='agree')
                  Agree with the terms of conditions
          div.form-group
            div.col-sm-offset-4.col-sm-8
              button.btn.btn-default(type='submit') Submit
      else
        h1 Empty data